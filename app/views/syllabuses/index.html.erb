<%= stylesheet_link_tag 'course' %>
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet"/>
<%= javascript_include_tag 'syllabus' %>

<% if student_signed_in? then %>
  <div class="navbar navbar-inverse navbar-fixed-left ">
    <ul class="nav navbar-nav">
      <li><%= link_to "Registered Courses", enrollments_path, class: "nav-link"%></li>
    </ul>
  </div>
  <div id="syllabus_course" class="container">
    <h1><%=@course_name%></h1>
    <h4>Course Files</h4>
    <br><br>
    <table id='syllabusesTable' class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Attachment</th>
      </tr>
      </thead>
      <tbody>
      <% @syllabuses.each do |syllabus| %>
        <tr>
          <td><%=syllabus.name %></td>
          <td><%= link_to "#{syllabus.attachment_identifier}", syllabus.attachment_url,:target => '_blank'%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p id="notice">You need to log in to continue.</p>
  <%= link_to "Login", new_student_session_path %>
<%end%>